  @model IEnumerable<Company>

<h2>Company List</h2>
<a href="@Url.Action("InsertCompany", "Home")" type="button" class="btn btn-outline-primary">Add New</a>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Company Name</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.CompanyName</td>
                <td>@company.CompanyAddress</td>
                <td>
                    <div style="display:flex">
                        @Html.ActionLink("Department", "Index", "Department", new { companyid = company.CompanyId }, new { @class = "btn btn-outline-primary", style = "margin-right: 10px;" })
                        <a type="button" class="btn btn-outline-success" href="@Url.Action("UpdateCompany", "Home", new { id = company.CompanyId })">Update</a>
                        <form method="post" action="@Url.Action("DeleteCompany", "Home", new { id = company.CompanyId })" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            @Html.AntiForgeryToken()
                            <button style="margin-right:10px" type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </td>
                
            </tr>
        }
    </tbody>
</table>

