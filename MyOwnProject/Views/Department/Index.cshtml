@model IEnumerable<Department>
<h1>Department List</h1>
<a href="@Url.Action("InsertDepartment", "Department")" type="button" class="btn btn-outline-primary">Add New</a>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Department Name</th>
            <th>Department Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentName</td>
                <td>@department.DepartmentAddress</td>
                <td>
                    <div style="display:flex">
                        <button style="margin-right:10px" type="button" class="btn btn-outline-primary">Employee</button>
                        <a type="button" class="btn btn-outline-success" href="@Url.Action("UpdateDepartment", "Home", new { id = department.DepartmentId })">Update</a>
                        <form method="post" action="@Url.Action("DeleteDepartment", "Home", new { id = department.DepartmentId })" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            @Html.AntiForgeryToken()
                            <button style="margin-right:10px" type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

