@model IEnumerable<Employee>

<h1>Employee List</h1>
@Html.ActionLink("Employee", "InsertEmployee", "Employee", new {departmentId=@ViewBag.departmentId }, new { @class = "btn btn-outline-primary", style = "margin-right: 10px;" })

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Department Name</th>
            <th>Department Address</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var employee in Model)
        {
            <tr>
                z
                <td>@employee.EmployeeName</td>
                <td>
                    <div style="display:flex">
                        <a type="button" class="btn btn-outline-success" href="@Url.Action("UpdateEmployee", "Employee", new { id = employee.EmployeeId })">Update</a>
                        <form method="post" action="@Url.Action("DeleteEmployee", "Employee", new { id = employee.EmployeeId,departmentId=employee.DepartmentId })" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            @Html.AntiForgeryToken()
                            <button style="margin-right:10px" type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

